<div class="container">
    <div class="row" style="margin-top:1%;">
        <dir class="col-sm-3" style="border-right : 1px double gray">
            <ul class="list-group">
                <li class="list-group">
                    <span> <a href="/profile"> <img src="{{imagePath}}" alt="..." class="rounded-circle" height="50px" width="50px"></a>
                    <a href="/editImage" class="glyphicon glyphicon-pencil"></a></span>
                    {{name}}
                </li>
                <li class="list-group">
                    <a href="/editfanprofile"><i class="fas fa-edit"></i>Edit Profile</a>
                </li>
                <li class="list-group">
                    <a href="/notifications"><i class="fas fa-envelope"></i>Notifications</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-certificate"></i>Offers</a>
                </li>
                <li class="list-group">
                    <a href="/messages"><i class="fas fa-comments"></i>Messages</a>
                </li>
                <li class="list-group">
                    <a href="/fantiphistory" id="tiphistory"><i class="fas fa-book"></i>Tip History</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-money-check-alt"></i>Account Balance</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-users"></i>Groups</a>
                </li>
                <div class="dropdown-divider"></div>
                <li class="list-group">
                    {{#if isCreator}}
                        <a href="/creatorprofile">Go to Creator Profile</a>
                        {{else}}
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createCreatorProfile" >Add Creators Profile</button>
                    {{/if}}
                </li>
            </ul>
        </dir>
        <div class="col-sm-9 ">
            <h2>Profile</h2>
                <form>
                    <div class="form-group">
                        <label for="name">Name</label> <br>
                        <input type="name" readonly class="form-control" name="name" id="name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label> <br>
                        <input type="email" readonly class="form-control" name="email" id="email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <label for="des">Description</label> <br>
                        {{# if description }}
                            <input type="text" readonly name="des" class="form-control" id="des" value="{{description}}">
                        {{else}}
                            <input type="text" readonly class="form-control" name="des" id="des" placeholder="Tell us a little bit about you!">
                        {{/if}}
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">URL</label>
                        <div class="col-sm-10">
                            <span><input type="text" readonly class="form-control-plaintext" id="staticEmail" value="fantipper.com/{{url}}">
                            <button onclick="copyFunction()" class="btn btn-primary">Copy</button></span>
                        </div>
                    </div>
                    <a href="/editfanprofile" class="btn btn-primary">Edit Fan Profile</a>
                </form>
        </div>
    </div>
</div>
<script>
    function copyFunction() {
    var copyText = document.getElementById("staticEmail");
    copyText.select();
    document.execCommand("copy");
    alert("Copied the text: " + copyText.value);
    }
</script>