<p>fan edit</p>
<form action="/profile" class="" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label> <br>
                        <input type="name" readonly class="form-control" name="name" id="name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label> <br>
                        <input type="email" readonly class="form-control" name="email" id="email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <label for="des">Description</label> <br>
                        {{# if description }}
                            <input type="text" readonly name="des" class="form-control" id="des" value="{{description}}">
                        {{else}}
                            <input type="text" readonly class="form-control" name="des" id="des" placeholder="Tell us a little bit about you!">
                        {{/if}}
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">URL</label>
                        <div class="col-sm-10">
                            <span><input type="text" readonly class="form-control-plaintext" id="staticEmail" value="fantipper.com/{{url}}">
                            <button onclick="copyFunction()" class="btn btn-primary">Copy</button></span>
                        </div>
                    </div>
                    <a href="/editfanprofile" class="btn btn-primary">Edit Fan Profile</a>
                </form>